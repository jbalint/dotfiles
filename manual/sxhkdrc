#
# bspwm hotkeys
#

super + alt + Escape
	bspc quit

super + w
	bspc node -c

super + t
	bspc desktop -l next

super + b
	bspc node `bspc query -T -d  | jq '.root.id'` -B

super + r
	bspc node `bspc query -T -d  | jq '.root.id'` -R 90

super + e
	bspc node `bspc query -T -d  | jq '.root.id'` -E

super + {f,F}
	bspc node `bspc query -T -d  | jq '.root.id'` -F {vertical,horizontal}

super + {s,S}
	bspc node -t {floating,tiled}

super + {grave,Tab}
	bspc {node,desktop} -f last

super + apostrophe
	bspc node -s last

super + {o,i}
	bspc control --record-history off; \
	bspc node {older,newer} -f; \
	bspc control --record-history on

super + y
	bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

super + m
	bspc node -s biggest

super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

super + {_,shift + }c
	bspc node -f {next,prev}

super + {comma,period}
	bspc desktop -C {backward,forward}

super + bracket{left,right}
	bspc desktop -f {prev,next}

super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

super + ctrl + {_,shift + }space
	bspc {node -p cancel,desktop -c}

super + alt + {h,j,k,l}
	bspc node {@west -r -10,@south -r +10,@north -r -10,@east -r +10}

super + alt + shift + {h,j,k,l}
	bspc node {@east -r -10,@north -r +10,@south -r -10,@west -r +10}

super + ctrl + {1-9}
	bspc node -r 0.{1-9}

super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} ^{1-9,10}

#
# wm independent hotkeys
#

super + Return
	st

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# Percy
super + n
    percy-client

XF86Messenger
	xdotool windowactivate --sync `xdotool search chromium | head -1` && xdotool key --clearmodifiers ctrl+1

XF86WWW
	bspc desktop -f ^4
